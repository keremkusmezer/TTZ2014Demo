<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical" >


    <Button
        android:id="@+id/btnschedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Job Scheduler Service" />

    <Button
        android:id="@+id/btnStartLockTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Lock Task" />

    <Button
        android:id="@+id/btnStopLockTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Lock Task" />

    <Button
        android:id="@+id/btnRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Recycler View" />

    <Button
        android:id="@+id/btnPdfView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Pdf Viewer" />

    <Button
        android:id="@+id/btnMediaProjection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Media Projection" /> 
    
</LinearLayout>